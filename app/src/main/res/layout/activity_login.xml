<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Login">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">




        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/gportallogo"
                android:layout_width="200dp"
                android:layout_height="200dp"></ImageView>

            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:text="Gportal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>



            <EditText
                android:maxLines="1"
                android:elevation="2dp"
                android:padding="10dp"
                android:id="@+id/hasinputeachuser"
                android:hint="ID Number"
                android:layout_marginTop="50dp"
                android:background="@drawable/logininputs"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/cardview_dark_background"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="40dp"></EditText>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <EditText
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:elevation="2dp"
                        android:padding="10dp"
                        android:id="@+id/hasinputpassword"
                        android:layout_marginLeft="30dp"
                        android:hint="Password"
                        android:background="@drawable/logininputs"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/cardview_dark_background"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        ></EditText>

                    <ToggleButton
                        android:background="@drawable/eyeslash"
                        android:textOff=""
                        android:textOn=""
                        android:id="@+id/showpassword"
                        android:layout_marginLeft="10dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"></ToggleButton>


                </LinearLayout>



        </LinearLayout>

        <Button
            android:background="@drawable/profilebg"
            android:id="@+id/hasbtnloggedin"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:text="Login"
            android:layout_width="300dp"
            android:layout_height="wrap_content"></Button>

        <TextView
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:text="Forgot your Password ?"
            android:textColor="@color/colorTertiary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="" />


    </LinearLayout>

</ScrollView>
