<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Login2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </LinearLayout>


            <TextView
                android:id="@+id/viewallgrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Register"
                android:textColor="@color/colorTertiary"
                android:textSize="15sp" />


        </RelativeLayout>




        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_gravity="center"
                android:background="@drawable/default_border_image"
                android:layout_width="200dp"
                android:layout_height="200dp"></ImageView>

            <TextView
                android:id="@+id/access"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:text="School"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>



            <TextView
                android:id="@+id/name"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"

                android:layout_gravity="center"
                android:textSize="20dp"
                android:text="Juan Dela Cruz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:id="@+id/cardid"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:text="17-500005"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <EditText
                    android:maxLines="1"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:inputType="textPassword"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/password"
                    android:hint="Password"
                    android:background="@drawable/logininputs"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/cardview_dark_background"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    ></EditText>

                <ToggleButton
                    android:background="@drawable/eyeslash"
                    android:textOff=""
                    android:textOn=""
                    android:id="@+id/showpassword"
                    android:layout_marginLeft="10dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"></ToggleButton>


            </LinearLayout>



        </LinearLayout>

        <Button
            android:background="@drawable/profilebg"
            android:id="@+id/loggedin"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:text="Login"
            android:layout_width="300dp"
            android:layout_height="wrap_content"></Button>

        <TextView
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:text="Forgot your Password ?"
            android:textColor="@color/colorTertiary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="10dp"
                    android:textSize="15dp"
                    android:text="Not you ?"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:layout_margin="10dp"
                    android:textSize="15dp"
                    android:text="Switch Account"
                    android:textColor="@color/colorTertiary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>



            </LinearLayout>

    </LinearLayout>

</ScrollView>
