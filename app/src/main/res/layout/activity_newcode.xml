<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".newcode"
    android:background="@color/white">

    <include layout="@layout/toolbarnikong4"></include>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:background="@drawable/style_spinner"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/spinnerAy"
            android:layout_width="300dp"
            android:layout_height="50dp">
        </Spinner>

        <Spinner
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:background="@drawable/style_spinner"
            android:gravity="center"
            android:id="@+id/spinnerCollege"
            android:layout_width="300dp"
            android:layout_height="50dp">
        </Spinner>
        <Spinner

            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:background="@drawable/style_spinner"
            android:gravity="center"
            android:id="@+id/spinnerProgram"
            android:layout_width="300dp"
            android:layout_height="50dp">
        </Spinner>
        <Spinner

            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:background="@drawable/style_spinner"
            android:gravity="center"
            android:id="@+id/spinnerSection"
            android:layout_width="300dp"
            android:layout_height="50dp">
        </Spinner>
        <Spinner

            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:background="@drawable/style_spinner"
            android:gravity="center"
            android:id="@+id/spinnerSubjects"
            android:layout_width="300dp"
            android:layout_height="50dp">
        </Spinner>
    </LinearLayout>

</LinearLayout>