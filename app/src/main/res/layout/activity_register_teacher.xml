<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".RegisterTeacher">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_margin="10dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/arrowleft"></ImageButton>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="10sp"
                    android:textSize="20sp"
                    android:textColor="@color/colorSecondary"
                    android:gravity="center"
                    android:text="Register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <TextView
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:textColor="@color/colorTertiary"
                android:gravity="center"
                android:text="Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />


        </RelativeLayout>




        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/logo"
                android:layout_width="150dp"
                android:layout_height="150dp"></ImageView>

            <Button
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:text="Upload Logo"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></Button>





            <EditText
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_gravity="center"
                android:hint="First Name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"></EditText>
            <EditText
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_gravity="center"
                android:hint="Last Name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"></EditText>
            <EditText
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_gravity="center"
                android:hint="Middle Name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"></EditText>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Employee ID"
                android:textColor="@color/black"
                android:textColorHint="@color/black"></EditText>



        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:textColor="@color/colorPrimary"
                android:layout_marginRight="50dp"
                android:layout_gravity="center"
                android:text="Male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></RadioButton>
            <RadioButton
                android:textColor="@color/colorPrimary"
                android:text="Female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></RadioButton>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="School Code"
                android:textColor="@color/black"
                android:textColorHint="@color/black"></EditText>
        </LinearLayout>



        <Button
            android:id="@+id/regBtn"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            android:textAllCaps="false"
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>



    </LinearLayout>



</ScrollView>

