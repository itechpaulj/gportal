<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".RegisterTeacher">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/arrowleft"></ImageButton>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:gravity="center"
                    android:text="Register"
                    android:textColor="@color/colorSecondary"
                    android:textSize="20sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/TeacherLoginbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Login"
                android:textColor="@color/colorTertiary"
                android:textSize="15sp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/schoolcode"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/inputcorner"
                android:hint="School Code"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textColorHint="@color/cardview_dark_background"
                android:textSize="15dp"></EditText>


            <Button
                android:id="@+id/btnschoolcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="@color/white"></Button>

            <ImageView
                android:id="@+id/imageTeacher"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/default_border_image"
                android:visibility="gone"></ImageView>

            <Button
                android:id="@+id/uploadBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                android:text="Upload Photo"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="gone"></Button>


            <EditText
                android:id="@+id/fnameteacher"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/inputcorner"
                android:hint="First Name"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textColorHint="@color/cardview_dark_background"
                android:textSize="15dp"
                android:visibility="gone"></EditText>

            <EditText
                android:id="@+id/lnameteacher"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/inputcorner"
                android:hint="Last Name"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textColorHint="@color/cardview_dark_background"
                android:textSize="15dp"
                android:visibility="gone"></EditText>

            <EditText
                android:id="@+id/mnameteacher"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/inputcorner"
                android:hint="Middle Name"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textColorHint="@color/cardview_dark_background"
                android:textSize="15dp"
                android:visibility="gone"></EditText>

            <EditText
                android:id="@+id/empteacher"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/inputcorner"
                android:hint="Employee ID"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textColorHint="@color/cardview_dark_background"
                android:textSize="15dp"
                android:visibility="gone"></EditText>

            <EditText
                android:id="@+id/password"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/inputcorner"
                android:hint="Password"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textColorHint="@color/cardview_dark_background"
                android:textSize="15dp"
                android:visibility="gone"></EditText>


            <LinearLayout
                android:id="@+id/linear_spinnercollegename"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:elevation="2dp">

                    <Spinner
                        android:id="@+id/spinnercollegename"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:visibility="gone"></Spinner>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/min_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <RadioGroup
                android:id="@+id/gender"
                android:layout_width="300dp"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="60dp"
                    android:text="Male"
                    android:textColor="@color/cardview_dark_background"></RadioButton>

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="-47dp"
                    android:text="Female"
                    android:textColor="@color/cardview_dark_background"></RadioButton>>
            </RadioGroup>
        </LinearLayout>


        <Button
            android:id="@+id/nextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/custombutton"
            android:text="REGISTER"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="gone"></Button>


    </LinearLayout>


</ScrollView>

