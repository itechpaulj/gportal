<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentDrawer"
    android:background="@drawable/gradebg"
    android:orientation="horizontal">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_margin="10dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/arrowleftwhite"></ImageButton>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="10sp"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="Grades Portal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



        </RelativeLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:paddingLeft="45dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="Grades"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <TableLayout
            android:elevation="2dp"
            android:background="@drawable/cardrectangle"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content">

            <TableRow

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="20dp"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary"
                    android:text="Enrolled"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>

            </TableRow>

            <TableRow
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="15dp"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary"
                    android:text="2021-2022"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:padding="5dp"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimary"
                        android:text="Subjects"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>

                    <TextView
                        android:padding="5dp"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimary"
                        android:text="Sections"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>

                </LinearLayout>


            </TableRow>

            <TableRow
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="20dp"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary"
                    android:text="2021-2022"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:padding="5dp"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimary"
                        android:text="Subjects"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>

                    <TextView
                        android:padding="5dp"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimary"
                        android:text="Sections"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>

                </LinearLayout>


            </TableRow>

            <TableRow
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="20dp"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary"
                    android:text="2021-2022"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:padding="5dp"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimary"
                        android:text="Subjects"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>

                    <TextView
                        android:padding="5dp"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimary"
                        android:text="Sections"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>

                </LinearLayout>


            </TableRow>

        </TableLayout>


        <LinearLayout
            android:elevation="10dp"
            android:gravity="center"
            android:background="@drawable/cardrectangle"
            android:layout_marginTop="300dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:drawablePadding="10dp"
                android:padding="20dp"
                android:drawableLeft="@drawable/settingsicon"
                android:textColor="@color/colorTertiary"
                android:textSize="20dp"
                android:text="Settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>


            <TextView
                android:drawablePadding="10dp"
                android:padding="20dp"
                android:drawableLeft="@drawable/helpicon"
                android:textColor="@color/colorTertiary"
                android:textSize="20dp"
                android:text="Help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

        </LinearLayout>




    </LinearLayout>



</ScrollView>
