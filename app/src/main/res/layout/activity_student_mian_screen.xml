<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentMianScreen"
    android:background="@drawable/gradebg"
    android:orientation="horizontal">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/customappbarwithprofile"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <Button
                android:background="@drawable/cornerbg"
                android:layout_margin="50dp"
                android:id="@+id/joinbtn"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:text="Join with a code"
                android:layout_width="250dp"
                android:layout_height="wrap_content"></Button>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginLeft="50dp"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp"
                    android:text="Year Level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:layout_marginRight="80dp"
                    android:layout_marginLeft="30dp"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp"
                    android:text="Sem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center"
                    android:elevation="2dp"
                    android:layout_width="80dp"
                    android:layout_height="40dp">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Spinner
                            android:layout_marginTop="0dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/spinnerAcademicYear"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </Spinner>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center"
                    android:elevation="2dp"
                    android:layout_width="80dp"
                    android:layout_height="40dp">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Spinner
                            android:layout_marginTop="0dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/spinnerSem"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </Spinner>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:elevation="2dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="0dp">


            <androidx.recyclerview.widget.RecyclerView
                android:elevation="2dp"
                android:id="@+id/gradesRecView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolbar"
                android:layout_marginTop="10dp" />



            </LinearLayout>

        <LinearLayout
            android:padding="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <LinearLayout
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="GWA:"
                    android:textSize="15dp"></TextView>

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Units Enrolled:"
                    android:textSize="15dp"></TextView>




            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="1.0"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp"></TextView>

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="1.90"
                    android:textSize="15dp"></TextView>



            </LinearLayout>




        </LinearLayout>
        <TextView
            android:layout_marginTop="50dp"
            android:id="@+id/studentuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView"
            android:visibility="invisible"/>
        <Button
            android:textColor="@color/white"
            android:background="@drawable/cornerbg"
            android:id="@+id/logout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Logout" />




    </LinearLayout>

</ScrollView>
