<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".StudentRegister">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton

                android:layout_margin="10dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/arrowleft"></ImageButton>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="10sp"
                    android:textSize="20sp"
                    android:textColor="@color/colorSecondary"
                    android:gravity="center"
                    android:text="Register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <TextView
                android:id="@+id/studloginbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Login"
                android:textColor="@color/colorTertiary"
                android:textSize="15sp" />


        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/profile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"></ImageView>

            <Button
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:text="Upload Photo"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></Button>


            <EditText

                android:hint="First Name"
                android:background="@drawable/inputcorner"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/cardview_dark_background"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"></EditText>

            <EditText
                android:hint="Last Name"
                android:background="@drawable/inputcorner"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/cardview_dark_background"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"></EditText>
            <EditText
                android:hint="Middle Name"
                android:background="@drawable/inputcorner"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/cardview_dark_background"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"></EditText>
            <EditText
                android:hint="School ID"
                android:background="@drawable/inputcorner"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/cardview_dark_background"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"></EditText>
            <EditText
                android:hint="School Code"
                android:background="@drawable/inputcorner"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/cardview_dark_background"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"></EditText>





        </LinearLayout>

        <LinearLayout
            android:id="@+id/min_gender"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioGroup
                android:id="@+id/gender"
                android:layout_width="300dp"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="60dp"
                    android:text="Male"
                    android:textColor="@color/cardview_dark_background"></RadioButton>

                <RadioButton
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="-47dp"
                    android:id="@+id/female"
                    android:textColor="@color/cardview_dark_background"
                    android:text="Female"
                    android:layout_gravity="center"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"></RadioButton>>
            </RadioGroup>
        </LinearLayout>


        <Button
            android:textColor="@color/white"
            android:id="@+id/studentNext"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            android:textAllCaps="false"
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>



    </LinearLayout>

</ScrollView>
