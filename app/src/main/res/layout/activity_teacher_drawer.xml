<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherDrawer"
    android:background="@drawable/gradebg"
    android:orientation="horizontal">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton

                android:layout_margin="10dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/arrowleftwhite"></ImageButton>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="10sp"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="Grades Portal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



        </RelativeLayout>

        <TextView
            android:layout_marginLeft="20dp"
            android:elevation="2dp"
            android:padding="20dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="Codes"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:layout_gravity="center"
            android:padding="20dp"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:text="Classes"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>



        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:elevation="2dp"
            android:background="@drawable/profilebg"
            android:layout_width="300dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_gravity="center"
                android:background="@drawable/profilebg"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:padding="30dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="2020-2021"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>


                <LinearLayout
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:padding="20dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:text="Subjects"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:padding="20dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:text="Section"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>



            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:elevation="2dp"
            android:background="@drawable/profilebg"
            android:layout_width="300dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_gravity="center"
                android:background="@drawable/profilebg"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:padding="30dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="2020-2021"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>


                <LinearLayout
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:padding="20dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:text="Subjects"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:padding="20dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:text="Section"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>



            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:elevation="2dp"
            android:background="@drawable/profilebg"
            android:layout_width="300dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_gravity="center"
                android:background="@drawable/profilebg"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:padding="30dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="2020-2021"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>


                <LinearLayout
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:padding="20dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:text="Subjects"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:padding="20dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:text="Section"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>



            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp">


            <TextView
                android:layout_marginBottom="50dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:background="@drawable/cornerbg"
                android:elevation="2dp"
                android:drawablePadding="10dp"
                android:padding="20dp"
                android:drawableTop="@drawable/settingsicon"
                android:textColor="@color/colorTertiary"
                android:textSize="10dp"
                android:text="Settings"
                android:layout_width="100dp"
                android:layout_height="wrap_content"></TextView>


            <TextView
                android:layout_marginBottom="50dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:background="@drawable/cornerbg"
                android:elevation="2dp"
                android:drawablePadding="10dp"
                android:padding="20dp"
                android:drawableTop="@drawable/helpicon"
                android:textColor="@color/colorTertiary"
                android:textSize="10dp"
                android:text="Help"
                android:layout_width="100dp"
                android:layout_height="wrap_content"></TextView>


        </LinearLayout>





    </LinearLayout>

</ScrollView>
