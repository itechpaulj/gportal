<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherMainScreen"
    android:background="@drawable/gradebg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">





        <Button
            android:id="@+id/newcode"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="New Code"
            android:background="@drawable/profilebg"
            android:layout_width="200dp"
            android:layout_height="wrap_content"></Button>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/teachersCodeRecView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="30dp" />


        <TextView
            android:id="@+id/teacheruser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:gravity="center"
            android:text="Teacher User"></TextView>

        <Button
            android:background="@drawable/profilebg"
            android:id="@+id/logout"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:text="Logout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"></Button>

    </LinearLayout>

</ScrollView>
